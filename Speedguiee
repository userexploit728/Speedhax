-- Create ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Create Frame (bar)
local barFrame = Instance.new("Frame")
barFrame.Size = UDim2.new(0.5, 0, 0.1, 0)  -- 50% width, 10% height
barFrame.Position = UDim2.new(0.25, 0, 0.4, 0)  -- Centered horizontally
barFrame.BackgroundColor3 = Color3.fromRGB(0, 0, 255)  -- Blue color
barFrame.Parent = screenGui

-- Create TextButton (Continue button)
local continueButton = Instance.new("TextButton")
continueButton.Size = UDim2.new(0.2, 0, 0.1, 0)  -- 20% width, 10% height
continueButton.Position = UDim2.new(0.4, 0, 0.55, 0)  -- Centered below the bar
continueButton.Text = "Continue"
continueButton.BackgroundColor3 = Color3.fromRGB(0, 255, 0)  -- Green color
continueButton.Parent = screenGui
